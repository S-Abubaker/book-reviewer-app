<h4>Edit Review on {{review.bookTitle}}</h4>
<div class="row">
    <form action="/reviews/{{review._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-field">
            <input type="text" id="bookTitle" name="bookTitle" value="{{review.bookTitle}}">
            <label for="bookTitle">Book Title</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field">
            <input type="text" id="bookAuthor" name="bookAuthor" value="{{review.bookAuthor}}">
            <label for="bookTitle">Book Author</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field">
            <h6>Update your review:</h6>
            <textarea id="reviewBody" name="reviewBody">{{review.reviewBody}}</textarea>
        </div>
    </div>
    <div class="row">
            <input type="submit" value="Update" class="btn red">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </div>
    </form>
</div>