<div class="row">
    <div class="col s12 m4">
        <div class="card centre-align">
            <div class="card-content">
                <span class="card-title">{{review.user.displayName}}</span>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="{{review.user.image}}" alt="" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/reviews/user/{{review.user._id}}">More From {{ review.user.firstName }}</a>
            </div>
        </div>
    </div>
    <div class="col s12 m8">
        <h3>{{review.bookTitle}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">By: {{{review.bookAuthor}}}</span>
                <p>&nbsp;{{{review.reviewBody}}}</p> 
                <p class="right">{{formatDate date 'MMMM Do YYYY, h:mm a'}}</p> 
            </div>
        </div>
    </div>
</div>

